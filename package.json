{
  "name": "zura",
  "private": true,
  "version": "1.0.0",
  "main": "package.json",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "sanity dev",
    "start": "sanity start",
    "build": "sanity build",
    "deploy": "sanity deploy",
    "deploy-graphql": "sanity graphql deploy",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@portabletext/block-tools": "^5.0.1",
    "@portabletext/toolkit": "^5.0.1",
    "@sanity/code-input": "^7.0.2",
    "@sanity/studio-secrets": "^3.0.2",
    "@sanity/ui": "^3.1.11",
    "@sanity/vision": "^5.9.0",
    "easymde": "^2.20.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "sanity": "^5.9.0",
    "sanity-plugin-cloudinary": "^1.4.1",
    "sanity-plugin-markdown": "^8.0.2",
    "sanity-plugin-media": "^4.1.1",
    "sanity-plugin-seofields": "^1.0.8",
    "styled-components": "^6.1.18",
    "turndown": "^7.2.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@sanity/eslint-config-studio": "^5.0.2",
    "@types/react": "^19.1",
    "@types/turndown": "^5.0.6",
    "@vitest/ui": "^4.0.9",
    "eslint": "^9.28",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.5",
    "typescript": "^5.8",
    "vitest": "^4.0.9"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
